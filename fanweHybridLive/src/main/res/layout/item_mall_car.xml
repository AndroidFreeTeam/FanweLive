<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/bg_white_rectangle_radius_25"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ivPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:src="@drawable/ic_seat_drive_play" />

    <RelativeLayout
        android:id="@+id/rlCar"
        android:layout_width="match_parent"
        android:layout_below="@id/ivPlay"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/ivCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            tools:src="@drawable/ic_anim_car2_body" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlCar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textColor="#333333"
        android:textSize="18sp"
        tools:text="法拉利" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="#824DB6"
        android:textSize="16sp"
        tools:text="598.0元/30天" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnBuy"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@id/tvPrice"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_deep_buy_rectangle_radius"
        android:clickable="true"
        android:focusable="true"
        android:text="购买"
        android:textColor="@color/white"
        android:textSize="18sp" />


</RelativeLayout>